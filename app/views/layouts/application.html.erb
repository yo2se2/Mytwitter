<!DOCTYPE html>
<html>
  <head>
    <title>Mytwitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header class="header">
      <div class="header__title">
          <span class="logo_My">My</span>
          <span class="logo_Tweets">Tweets</span>
      </div>
  
      <nav>
          <ul class="header__ul">
              <li class="header__li"><%= link_to 'Home',tweets_home_path%></li>
              <li class="header__li"><%= link_to 'Mypage', tweets_mypage_path%></li>
              <li class="header__li"><%= link_to 'ログアウト',destroy_user_session_path, method: :delete %></li>
          </ul>
      </nav>
  </header>

  <body>
    <%= yield %>
  </body>
  <footer>
   <p>Mytwitter</p>
  </footer>
</html>
