<div class="global-container">
    <div class="container">
        <header class="header">
            <div class="header__title">
                <span class="logo_My">My</span>
                <span class="logo_Tweets">Tweets</span>
            </div>
        
            <nav>
                <ul class="header__ul">
                    <li class="header__li">Home</li>
                    <li class="header__li"><%= link_to 'Mypage', :controller => "tweets", :action => "mypage"%></li>
                    <li class="header__li">Favorite</li>
                </ul>
            </nav>
        </header>

        <button class="tweet-button"></button>

    </div>
    
    <!--  後ろに隠している，twitterの投稿機能  -->
    <div class="back-container">

        <!-- tweet投稿機能を閉じるボタン-->
        <button class="close__btn">
             <span></span>
             <span></span>
        </button>
               
        <div class="post-form">
        <!-- railsのコードをhtmlに反映させる。-->
            <%= form_for @tweet do |f| %>
                <div class="field">
                    <%= f.label :body %>
                    <%= f.text_area :body, :size => 70 %>
                </div>
                <%= f.submit "Tweetする" %>
            <% end %>        
        </div>
    </div>
    


   

</div>

<%# Javascriptを適応 %>
 <%= javascript_pack_tag 'tweet/index' %>